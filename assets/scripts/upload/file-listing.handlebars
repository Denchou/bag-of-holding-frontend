         <h4>Other People's Stash</h4>
{{#if files.length}}
{{#each files as |file|}}


    <section data-id="{{file._id}}" class="container-fluid">
      <div class="card-deck">
      <div class="card text-center text-white bg-primary mb-1" style="max-width: 40rem;">
          <div class="card-header">
            <h2 class="topic">{{file.title}}</h2>

          </div>

      <div class="card-body">
        <p class="card-text">{{file.tag}}</p>
      </div>

      <div>Owner: {{file.owner}}</div>

      <div><a href="{{file.url}}" target="_blank"><button class='btn btn-secondary'>Retrieve Loot</button></a></div>
      <div class="text-bottom">
        Created: {{file.createdAt}}
      </div>
      <div class="text-bottom">
        Updated: {{file.updatedAt}}
      </div>

      <div class="card-footer">
      </div>
    </div>
  </div>
  </section>
{{/each}}
{{else}}
<p>No bags are available for looting</p>
{{/if}}
